<p id="notice"><%= notice %></p>

<h1>Images Table</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-8">
      <%= will_paginate @images %>
    </div>
    <div class="col-md-4 col-sm-4 newBtn">
      <%= link_to 'Create a New Image', new_image_path, :class=>"btn btn-primary"%>
    </div>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Src</th>
        <th colspan="3">Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.id %></td>
          <td><%= image.src %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @images %>




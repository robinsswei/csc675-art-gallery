<p id="notice"><%= notice %></p>

<%= link_to 'New Artist', new_artist_path %>

<h1>Listing Artists</h1>

<table>
  <thead>
    <tr>
      <th>Artist ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Status</th>
      <th>Country</th>
      <th>Date of birth</th>
      <th>Background</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.id %></td>
        <td><%= artist.first_name %></td>
        <td><%= artist.last_name %></td>
        <td><%= artist.gender %></td>
        <td><%= artist.status %></td>
        <td><%= artist.country_id %></td>
        <td><%= artist.date_of_birth %></td>
        <td><%= artist.background %></td>
        <td><%= artist.phone_number %></td>
        <td><%= artist.email %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

